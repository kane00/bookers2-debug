<div class="container">
    <div class="row">
    	<div class="col-xs-3">
			<h2>User info</h2>
			<!-- bookを書いたユーザ情報を表示するためcurrent_user→@userへ -->
			<table class="table">
				<tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

				<tr>
					<th>name</th>
					<!-- user→current_userへ -->
					<th><%= @user.name %></th>
				</tr>

				<tr>
					<th>introduction</th>
					<!-- 編集はログインしているユーザのみできる　user→current_userへ -->
					<th><%= @user.introduction %></th>
				</tr>
				<tr>
					<th>Follows</th> 
					<!-- 表示名はフォロー中の人数、遷移先はフォロー一覧 -->
					<th><%= link_to @user.followings.count, following_user_path(@user) %></th>
				</tr>
				<tr>
					<th>Followers</th>
					<!-- 表示名はフォロー中の人数、遷移先はフォロワー一覧 -->
					<th><%= link_to @user.followers.count, followers_user_path(@user) %></th>
				</tr>
			</table>
			<div class="row">
				<!-- 編集はログインしているユーザーをモデルオブジェクトとして利用のためuser→current_userへ -->
				<%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
			</div>
			<!-- フォローするor外すボタン -->
			<div class="row">
			<!-- ユーザーがフォローしている場合は、フォロー解除ボタンを表示。-->
				<% if current_user.following?(@user) %>
				  <%= render 'unfollow' %>
				  <!-- してない場合は、フォローボタン表示させる -->
				<% else %>
				  <%= render 'follow' %>
				<% end %>
			</div>


			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<!-- booksの＠が足りない -->
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td>
							<!-- コメント数追加 -->
							コメント数：
							<%= book.post_comments.count %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<!--books一覧 -->

